            <%= link_to allotment_path(allotment) do%>
        <div class="card-trip-infos">
          <div><%= allotment.name %></div>
          <div>Location: <%= allotment.location %></div>
          <div><%= allotment.description[0, 100] %>...</div>
          <div>Size: <%= allotment.area_size %>m<sup>2</sup></div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
